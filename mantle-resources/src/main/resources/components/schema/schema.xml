                <model name="sanitizedNewsType" onError="ignore">
                    <model name="DOCUMENT" id="document" />
                </model>
            </property>

            <property name="newsType" value="${@sanitizedNewsType}" onError="ignore">
                <model name="sanitizedNewsType" onError="ignore">
